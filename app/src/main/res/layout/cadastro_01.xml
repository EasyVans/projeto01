<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    >

    <!-- LINEAR TOPO -->
    <LinearLayout
        android:id="@+id/linear_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/txtamarelo"
        android:orientation="horizontal"
        >


            <!-- LINEAR 3 -->
            <LinearLayout
                android:id="@+id/linear_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                >

                <!-- TEXTO LADO FOTO-->
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="@string/auxilio_cad"
                    android:textAlignment="center"
                    android:textColor="#435F99"
                    android:textStyle="bold"
                    />

            </LinearLayout>
        </LinearLayout>

    <!-- LINEAR MEIO -->

    <LinearLayout
        android:id="@+id/linear_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >


        <!-- DDD+TELEFONE -->
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="@string/telephone"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>

        <!-- NOME COMPLETO -->
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="@string/nome"
                android:inputType="text"
                />

        </android.support.design.widget.TextInputLayout>

        <!-- CPF -->
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/cpf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="@string/cpf"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>

        <!-- SENHA -->
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/senha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="@string/senha"
                android:inputType="numberPassword"
                />

        </android.support.design.widget.TextInputLayout>

        <!-- CONFIRMAR SENHA -->
        <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/conf_senha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="@string/senha_confirm"
                android:inputType="numberPassword"
                />

        </android.support.design.widget.TextInputLayout>

        <!-- COMO CONHECEU -->
        <!-- <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" >
        <!-
        <!-
        <!-     <Spinner
        <!-         android:id="@+id/spinner"
        <!-         android:layout_width="match_parent"
        <!-         android:layout_height="match_parent"
        <!-         android:dropDownWidth="40dp"
        <!-         android:prompt="@string/who_label"
        <!-         >
        <!-     </Spinner>
        <!-
        <!- </android.support.design.widget.TextInputLayout>

        <!- LINEAR BAIXO -->

        <LinearLayout
            android:id="@+id/linear_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_4"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <!-- BOTAO -->
            <android.support.design.widget.TextInputLayout android:layout_width="match_parent" android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/avancar_cad_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/continuar"
                    android:textSize="20dp"

                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>